<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <!-- Имя комплекта настроек исходя из того, что могут быть разные провайдеры сервисов для JPA
    	 Данный transaction-type - означает, что JPA будет задавать настройки таблицам, а не БД  -->
    <persistence-unit name="dev.library-hb" transaction-type="RESOURCE_LOCAL">

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver - драйвер создающий connect 
            																						между JPA и DB -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/library-hb" /> <!-- BD Mane - имя БД и
            указание где БД находится, в данном случае на локалке -->
            <property name="javax.persistence.jdbc.user" value="postgres" /> <!-- DB User - имя пользователя-->
            <property name="javax.persistence.jdbc.password" value="Baloxegal510212" /> <!-- DB Password - пароль-->

	    	<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> <!-- DB Dialect - диалект
	    	на котором HB будет общаться с DB -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop" /> <!-- create / create-drop / update - режим работы
            с таблицами: create - создать таблицу если ее нет, если есть ничего не делать;
            			 create-drop - все удалить по новой создать
            			 update - если есть таблица обновить, если нет то создать -->
            
            <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console - показать команды уровне DB -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted - показать команды уровне DB
            																				в формате SQL -->
        </properties>

    </persistence-unit>
</persistence>